<configuration>

    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} %-5level[%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.cool.url" level="DEBUG" />
    <logger name="scala.slick" level="INFO"/>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>